<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:padding= "25dp"
    android:layout_height="match_parent"
    tools:context="com.example.user.attendee.TwoPointOh">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:padding="20dp">
       <TextView
           android:id="@+id/signing_instructions"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="105dp"
           android:gravity="center"
           android:text="@string/instructions"
           android:textAlignment="center"
           android:textSize="22sp" />

   </RelativeLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        fab:menu_colorNormal="@color/colorAccent"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/ic_action_person"
        fab:menu_colorPressed="#bca41e"
        fab:menu_colorRipple="#bca41e">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/signin_fab_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            app:fab_colorNormal="@color/colorPrimary"
            fab:rippleColor="@color/colorPrimaryDark"
            android:src="@drawable/ic_action_person"
            fab:fab_label="Sign In"
            fab:fab_colorPressed= "@color/colorPrimaryDark"

            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/signout_fab_menu_tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            fab:fab_size="mini"
            fab:rippleColor="@color/colorPrimaryDark"
            fab:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_action_exit"
            fab:fab_label="Sign Out"
            fab:fab_colorPressed= "@color/colorPrimaryDark"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/services_fab_menu_tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            fab:fab_size="mini"
            fab:rippleColor="@color/colorPrimaryDark"
            android:src="@drawable/ic_action_web"
            fab:fab_label="Acm Services"
            fab:fab_colorPressed= "@color/colorPrimaryDark"
            />


    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>
